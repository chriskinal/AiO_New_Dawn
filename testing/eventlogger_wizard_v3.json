{
  "version": "1.0.2",
  "level": 0,
  "http": {
    "http": true,
    "https": false,
    "ui": true,
    "login": false
  },
  "mqtt": {
    "enable": false
  },
  "dns": {
    "type": "default",
    "url": "udp://8.8.8.8:53",
    "captive": false
  },
  "sntp": {
    "enable": false
  },
  "modbus": {
    "enable": false
  },
  "build": {
    "board": "teensy41",
    "ide": "PlatformIO",
    "rtos": "baremetal",
    "cores": [],
    "mode": "existing"
  },
  "api": {
    "logger_config": {
      "type": "data",
      "read_level": 0,
      "write_level": 3,
      "attributes": {
        "enableSerial": {
          "type": "bool",
          "value": true
        },
        "serialLevel": {
          "type": "int",
          "value": 6,
          "min": 0,
          "max": 7
        },
        "enableUDP": {
          "type": "bool",
          "value": false
        },
        "udpLevel": {
          "type": "int",
          "value": 4,
          "min": 0,
          "max": 7
        },
        "syslogPort": {
          "type": "int",
          "value": 514,
          "min": 1,
          "max": 65535
        },
        "mongooseLogLevel": {
          "type": "int",
          "value": 2,
          "min": 0,
          "max": 4
        }
      }
    },
    "logger_stats": {
      "type": "data",
      "read_level": 0,
      "write_level": 7,
      "readonly": true,
      "attributes": {
        "eventCount": {
          "type": "int",
          "value": 0
        },
        "startupMode": {
          "type": "bool",
          "value": true
        }
      }
    },
    "logger_reset": {
      "type": "action",
      "read_level": 0,
      "write_level": 3,
      "value": false
    },
    "logger_test": {
      "type": "action",
      "read_level": 0,
      "write_level": 0,
      "value": false
    }
  },
  "ui": {
    "production": true,
    "brand": "AiO New Dawn",
    "logo": "",
    "pages": [
      {
        "type": "page",
        "title": "EventLogger",
        "icon": "fa-list-alt",
        "level": 0,
        "layout": [
          {
            "type": "h1",
            "title": "EventLogger Configuration"
          },
          {
            "type": "flex",
            "items": [
              {
                "type": "card",
                "title": "Serial Console Output",
                "classes": "w-full sm:w-1/2",
                "items": [
                  {
                    "type": "toggle",
                    "bind": "api.logger_config.attributes.enableSerial",
                    "title": "Enable Serial Logging"
                  },
                  {
                    "type": "select",
                    "bind": "api.logger_config.attributes.serialLevel",
                    "title": "Serial Log Level",
                    "placeholder": "Select log level...",
                    "options": [
                      {"value": 0, "title": "EMERGENCY"},
                      {"value": 1, "title": "ALERT"},
                      {"value": 2, "title": "CRITICAL"},
                      {"value": 3, "title": "ERROR"},
                      {"value": 4, "title": "WARNING"},
                      {"value": 5, "title": "NOTICE"},
                      {"value": 6, "title": "INFO"},
                      {"value": 7, "title": "DEBUG"}
                    ]
                  }
                ]
              },
              {
                "type": "card",
                "title": "UDP Syslog Output",
                "classes": "w-full sm:w-1/2",
                "items": [
                  {
                    "type": "toggle",
                    "bind": "api.logger_config.attributes.enableUDP",
                    "title": "Enable UDP Syslog"
                  },
                  {
                    "type": "select",
                    "bind": "api.logger_config.attributes.udpLevel",
                    "title": "UDP Log Level",
                    "placeholder": "Select log level...",
                    "options": [
                      {"value": 0, "title": "EMERGENCY"},
                      {"value": 1, "title": "ALERT"},
                      {"value": 2, "title": "CRITICAL"},
                      {"value": 3, "title": "ERROR"},
                      {"value": 4, "title": "WARNING"},
                      {"value": 5, "title": "NOTICE"},
                      {"value": 6, "title": "INFO"},
                      {"value": 7, "title": "DEBUG"}
                    ]
                  },
                  {
                    "type": "input",
                    "bind": "api.logger_config.attributes.syslogPort",
                    "title": "Syslog Port",
                    "placeholder": "514"
                  }
                ]
              }
            ]
          },
          {
            "type": "card",
            "title": "Advanced Settings",
            "items": [
              {
                "type": "select",
                "bind": "api.logger_config.attributes.mongooseLogLevel",
                "title": "Mongoose Network Log Level",
                "placeholder": "Select log level...",
                "options": [
                  {"value": 0, "title": "Disabled"},
                  {"value": 1, "title": "Error"},
                  {"value": 2, "title": "Info"},
                  {"value": 3, "title": "Debug"},
                  {"value": 4, "title": "Verbose"}
                ]
              }
            ]
          },
          {
            "type": "flex",
            "items": [
              {
                "type": "card",
                "title": "Statistics",
                "classes": "w-full sm:w-1/2",
                "items": [
                  {
                    "type": "label",
                    "bind": "api.logger_stats.attributes.eventCount",
                    "title": "Total Events Logged"
                  },
                  {
                    "type": "label",
                    "bind": "api.logger_stats.attributes.startupMode",
                    "title": "Startup Mode Active"
                  }
                ]
              },
              {
                "type": "card",
                "title": "Actions",
                "classes": "w-full sm:w-1/2",
                "items": [
                  {
                    "type": "button",
                    "bind": "api.logger_reset",
                    "title": "Reset Event Counter",
                    "icon": "fa-refresh",
                    "color": "btn-warning"
                  },
                  {
                    "type": "button",
                    "bind": "api.logger_test",
                    "title": "Generate Test Messages",
                    "icon": "fa-bug",
                    "color": "btn-info"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}