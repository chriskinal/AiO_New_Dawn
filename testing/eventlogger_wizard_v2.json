{
  "version": "1.0.2",
  "level": 0,
  "http": {
    "http": true,
    "https": false,
    "ui": true,
    "login": false
  },
  "mqtt": {
    "enable": false
  },
  "dns": {
    "type": "default",
    "url": "udp://8.8.8.8:53",
    "captive": false
  },
  "sntp": {
    "enable": false
  },
  "modbus": {
    "enable": false
  },
  "build": {
    "board": "teensy41",
    "ide": "PlatformIO",
    "rtos": "baremetal",
    "cores": [],
    "mode": "existing"
  },
  "api": {
    "logger_config": {
      "type": "data",
      "read_level": 0,
      "write_level": 3,
      "attributes": {
        "enableSerial": {
          "type": "bool",
          "value": true
        },
        "serialLevel": {
          "type": "int",
          "value": 6,
          "min": 0,
          "max": 7
        },
        "enableUDP": {
          "type": "bool",
          "value": false
        },
        "udpLevel": {
          "type": "int",
          "value": 4,
          "min": 0,
          "max": 7
        },
        "syslogPort": {
          "type": "int",
          "value": 514,
          "min": 1,
          "max": 65535
        },
        "mongooseLogLevel": {
          "type": "int",
          "value": 2,
          "min": 0,
          "max": 4
        }
      }
    },
    "logger_stats": {
      "type": "data",
      "read_level": 0,
      "write_level": 7,
      "readonly": true,
      "attributes": {
        "eventCount": {
          "type": "int",
          "value": 0
        },
        "startupMode": {
          "type": "bool",
          "value": true
        }
      }
    },
    "logger_reset": {
      "type": "action",
      "read_level": 0,
      "write_level": 3,
      "value": false
    },
    "logger_test": {
      "type": "action",
      "read_level": 0,
      "write_level": 0,
      "value": false
    }
  },
  "ui": {
    "production": true,
    "brand": "AiO New Dawn",
    "logo": "",
    "pages": [
      {
        "title": "EventLogger",
        "icon": "fa-list-alt",
        "cards": [
          {
            "title": "Serial Console Output",
            "items": [
              {
                "type": "toggle",
                "bind": "api.logger_config.attributes.enableSerial",
                "title": "Enable Serial Logging"
              },
              {
                "type": "select",
                "bind": "api.logger_config.attributes.serialLevel",
                "title": "Serial Log Level",
                "options": "EMERGENCY:0,ALERT:1,CRITICAL:2,ERROR:3,WARNING:4,NOTICE:5,INFO:6,DEBUG:7"
              }
            ]
          },
          {
            "title": "UDP Syslog Output",
            "items": [
              {
                "type": "toggle",
                "bind": "api.logger_config.attributes.enableUDP",
                "title": "Enable UDP Syslog"
              },
              {
                "type": "select",
                "bind": "api.logger_config.attributes.udpLevel",
                "title": "UDP Log Level",
                "options": "EMERGENCY:0,ALERT:1,CRITICAL:2,ERROR:3,WARNING:4,NOTICE:5,INFO:6,DEBUG:7"
              },
              {
                "type": "input",
                "bind": "api.logger_config.attributes.syslogPort",
                "title": "Syslog Port"
              }
            ]
          },
          {
            "title": "Advanced Settings",
            "items": [
              {
                "type": "select",
                "bind": "api.logger_config.attributes.mongooseLogLevel",
                "title": "Mongoose Network Log Level",
                "options": "Disabled:0,Error:1,Info:2,Debug:3,Verbose:4"
              }
            ]
          },
          {
            "title": "Statistics",
            "items": [
              {
                "type": "label",
                "bind": "api.logger_stats.attributes.eventCount",
                "title": "Total Events Logged"
              },
              {
                "type": "label",
                "bind": "api.logger_stats.attributes.startupMode",
                "title": "Startup Mode Active"
              }
            ]
          },
          {
            "title": "Actions",
            "items": [
              {
                "type": "button",
                "bind": "api.logger_reset",
                "title": "Reset Event Counter",
                "icon": "fa-refresh"
              },
              {
                "type": "button",
                "bind": "api.logger_test",
                "title": "Generate Test Messages",
                "icon": "fa-bug"
              }
            ]
          }
        ]
      }
    ]
  }
}